<h1 class="h1 text-center m-3">reCAPTCHA Demo</h1>

<%= render template: 'posts/new' %>

<div class="container mt-5">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr class="table-primary">
        <th>Title</th>
        <th>Content</th>
      </tr>
    </thead>
    <tbody>
      <% Post.all.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
        </tr>
      <% end %>
    </tbody>
</table>
</div>



